{
	"name": "processing4-vscode-extension",
	"description": "Run Processing sketches in VS Code",
	"author": "Stef Tervelde",
	"license": "LGPL-2.1-or-later",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Stefterv/processing4-vscode-extension"
	},
	"publisher": "stefterv",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": [
			{
				"command": "processing.sketch.run",
				"title": "Run the Processing Sketch",
				"icon": "media/start.svg"
			},
			{
				"command": "processing.sketch.stop",
				"title": "Stop the Processing Sketch",
				"icon": "media/stop.svg"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "processing.sketch.run",
					"when": "resourceExtname == .pde",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "processing.sketch.run",
					"when": "editorLangId == Processing || editorLangId == java",
					"group": "navigation"
				},
				{
					"command": "processing.sketch.stop",
					"when": "editorLangId == Processing || editorLangId == java",
					"group": "navigation"
				}
			],
			"terminal/context": [
				{
					"command": "processing.sketch.run",
					"group": "navigation"
				},
				{
					"command": "processing.sketch.stop",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Processing",
			"properties": {
				"processing.version": {
					"scope": "machine",
					"type": "string",
					"default": "latest",
					"description": "The version of the Processing to use. The latest version is used by default."
				},
				"processing.autosave": {
					"scope": "window",
					"type": "boolean",
					"default": false,
					"description": "Automatically save the sketch before running it."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "processingSidebar",
					"title": "Processing",
					"icon": "media/processing-flat-color.svg"
				}
			]
		},
		"views": {
			"processingSidebar": [
				{
					"id": "processingSidebarSketchbookView",
					"name": "Sketchbook",
					"icon": "media/processing-flat-color.svg"
				},
				{
					"id": "processingSidebarExamplesView",
					"name": "Examples",
					"icon": "media/processing-flat-color.svg"
				}
			]
		},
		"languages": [
			{
				"id": "Processing",
				"extensions": [
					".pde"
				],
				"icon": {
					"light": "media/processing-icon.svg",
					"dark": "media/processing-icon.svg"
 				}
			}
		],
		"grammars": [
			{
				"language": "Processing",
				"scopeName": "source.pde",
				"path": "./syntaxes/processing.tmGrammar.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	}
}